<?xml version="1.0" encoding="UTF-8"?>
<Context crossContext="true" reloadable="true">
  <Manager className="org.apache.catalina.session.PersistentManager" saveOnRestart="false"/>

  <Parameter name="appname" value="JZKit Cross/Metasearch app"/>

  <Parameter name="org.jzkit.webapp.jdbc_driver" value="org.gjt.mm.mysql.Driver"/>
  <Parameter name="org.jzkit.webapp.url" value="jdbc:mysql://localhost/JZKit?autoReconnect=true&amp;characterEncoding=utf8"/>
  <Parameter name="org.jzkit.webapp.hiberate_dialect" value="org.hibernate.dialect.MySQLDialect"/>

  <Parameter name="org.jzkit.webapp.username" value="k-int"/>
  <Parameter name="org.jzkit.webapp.password" value="k-int"/>
  <Parameter name="org.jzkit.webapp.default_auto_commit" value="false"/>
  <Parameter name="org.jzkit.webapp.query_substitutions" value="true"/>
  <Parameter name="org.jzkit.webapp.show_sql" value="false"/>
  <Parameter name="org.jzkit.webapp.harvest.thread_pool_size" value="1"/>

  <Parameter name="hibernate.query.factory_class" value="org.hibernate.hql.ast.ASTQueryTranslatorFactory"/>
  <Parameter name="hibernate.hbm2ddl.auto" value="update"/>
  <Parameter name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider"/>

  <Parameter name="org.jzkit.rmi.service_port" value="1199"/>
  <Parameter name="org.jzkit.rmi.service_host" value="localhost"/>

  <WatchedResource>WEB-INF/web.xml</WatchedResource>
</Context>
